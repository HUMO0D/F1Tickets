@model F1Tickets.Models.Order

@{
	ViewData["Title"] = "My Orders";
}

<style>
	table {
		width: 100%;
		margin-top: 20px;
	}

	table, td, th {
		border: 1px solid;
		font-size: 20px;
	}
</style>

<div class="text-center">
	<h1>My Orders</h1>
	<table id="OrderTable">
		<thead>
			<tr>
				<th>Order Number</th>
				<th>Race</th>
				<th>Date</th>
				<th>Ticket Type</th>
				<th>Ticket Price</th>
			</tr>
		</thead>

