@model F1Tickets.Models.Order

@{
	ViewData["Title"] = "All Orders";
}

<style>
	table {
		width: 100%;
		margin-top: 20px;
	}

	table, td, th {
		border: 1px solid;
		font-size: 20px;
	}

	.Deletebtn {
		align-items: center;
		background-color: #FF0000;
		border: 0;
		border-radius: 100px;
		box-sizing: border-box;
		color: #ffffff;
		cursor: pointer;
		font-size: 16px;
		font-weight: 600;
		justify-content: center;
		line-height: 30px;
		width: 70px;
		touch-action: manipulation;
		transition: background-color 0.167s cubic-bezier(0.4, 0, 0.2, 1) 0s, box-shadow 0.167s cubic-bezier(0.4, 0, 0.2, 1) 0s, color 0.167s cubic-bezier(0.4, 0, 0.2, 1) 0s;
		vertical-align: middle;
	}

		.Deletebtn:hover,
		.Deletebtn:focus {
			background-color: #910000;
			color: #ffffff;
		}

</style>

<div class="text-center">
	<h1>All Orders</h1>
	<table>
		<thead>
			<tr>
				<th>User name</th>
				<th>Order number</th>
				<th>Race</th>
				<th>Date</th>
				<th>Ticket type</th>
				<th>Ticket price</th>
				<th>Delete Order</th>
			</tr>
		</thead>

		<tbody>
			@foreach (var order in ViewBag.AllOrders)
			{
				<tr>
					<td>@order.Username</td>
					<td>F-@order.OrderId</td>
					<td>@order.OrderRace GP</td>
					<td>@order.OrderDate</td>
					<td>@order.TicketType</td>
					<td>@order.TicketPrice OMR</td>
					<td>
						<form asp-controller="Orders" asp-action="DeleteOrder" method="post" style="display:inline;">
							<input type="hidden" name="OrderId" value="@order.OrderId" />
							<input type="submit" class="Deletebtn" value="Delete" onclick="return confirm('Are you sure you want to delete this order for @order.OrderRace GP?');" />
						</form>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
